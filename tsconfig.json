{
  "compilerOptions": {
    // Gradual migration settings
    "allowJs": true, // Allow .js files to coexist
    "checkJs": false, // Don't check .js files yet
    "strict": false, // Start without strict mode

    // Target modern browsers
    "target": "ES2020",
    "module": "ES2020",
    "lib": ["ES2020", "DOM"],

    // Module resolution
    "moduleResolution": "node",
    "esModuleInterop": true,
    "resolveJsonModule": true,

    // Output settings
    "declaration": true, // Generate .d.ts files
    "declarationMap": true,
    "sourceMap": true,
    "outDir": "./dist",
    "rootDir": "./src",

    // Code quality (start lenient)
    "noImplicitAny": false, // Allow implicit any for now
    "strictNullChecks": false, // Disable for gradual migration
    "noUnusedLocals": false,
    "noUnusedParameters": false,

    // Other settings
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "incremental": true // Faster rebuilds
  },
  "include": ["src/**/*"],
  "exclude": [
    "node_modules",
    "dist",
    "coverage",
    "**/*.test.ts",
    "**/*.test.js"
  ]
}
